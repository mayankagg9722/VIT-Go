<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:focusableInTouchMode="true"
    android:id="@+id/errorWindow">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.18"
        android:background="@android:color/black"
        android:alpha="0.5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.5"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom"
            android:layout_centerInParent="true"
            android:gravity="bottom">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:foregroundGravity="bottom"
                android:src="@drawable/invalidcredentialserrorbackground"
                android:alpha="1"
                android:id="@+id/errorImage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="bottom"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/errorImage">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:src="@drawable/errorsubmitbutton"
                    android:foregroundGravity="bottom"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/ii"
                    android:layout_marginBottom="0dp"
                    android:id="@+id/errorImageOkButton"/>


            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.18"
        android:background="@android:color/black"
        android:alpha="0.5"/>


</LinearLayout>