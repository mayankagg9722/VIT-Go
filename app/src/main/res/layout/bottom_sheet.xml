<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    app:behavior_peekHeight="180dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#fff"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="8dp"
            android:id="@+id/expandlayout"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Leave Request"
                android:gravity="center"
                android:textColor="#c9c9c9"
                android:id="@+id/leavesectext"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Outing Request"
                android:gravity="center"
                android:textColor="#c9c9c9"
                android:id="@+id/outingsectext"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Late Request"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#c9c9c9"
                android:id="@+id/latesectext"/>

        </LinearLayout>

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tablayout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorHeight="5dp"
                app:tabIndicatorColor="#F5F5F5"
                android:visibility="gone">
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/leaveviewpager"
                android:visibility="gone"></android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/mylayout">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:id="@+id/leaverequest">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:id="@+id/leaveImage"
                            android:src="@drawable/manleaving"
                            android:tint="#c9c9c9"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leave Request"
                            android:textColor="#c9c9c9"
                            android:id="@+id/leavetext"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:id="@+id/outing">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:id="@+id/outingImage"
                            android:src="@drawable/girlgoing"
                            android:tint="#c9c9c9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outing Request"
                            android:textColor="#c9c9c9"
                            android:id="@+id/outingtext"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:id="@+id/lateCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/latehour"
                            android:id="@+id/lateimage"
                            android:tint="#c9c9c9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Late Request"
                            android:textColor="#c9c9c9"
                            android:id="@+id/latetext"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>