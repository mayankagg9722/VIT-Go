<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edebeb"
    android:descendantFocusability="afterDescendants"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayankaggarwal.viteventsapp.activities.Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/detail_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="1">

                <TextView
                    android:id="@+id/detail_course_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Operating System"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_weight="0.8"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/percentage_card"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_gravity="end">

                    <TextView
                        android:id="@+id/course_slot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="2dp"
                        android:text="SJT-402"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detail_faculty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Faculty"
                            android:textColor="#b5abab"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/detail_course_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Course code"
                            android:textColor="#b5abab"
                            android:textSize="10dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="horizontal">

                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        CircleProgressView:cpv_barWidth="6.5dp"
                        CircleProgressView:cpv_innerContourSize="0dp"
                        CircleProgressView:cpv_maxValue="100"
                        CircleProgressView:cpv_outerContourSize="0dp"
                        CircleProgressView:cpv_rimColor="#ececec"
                        CircleProgressView:cpv_rimWidth="6.5dp"
                        CircleProgressView:cpv_showUnit="false"
                        CircleProgressView:cpv_spinColor="@color/color_accent"
                        CircleProgressView:cpv_startAngle="90"
                        CircleProgressView:cpv_textColor="#000"
                        CircleProgressView:cpv_textMode="Value"
                        CircleProgressView:cpv_textSize="20dp"
                        CircleProgressView:cpv_value="0" />


                    <TextView
                        android:id="@+id/atendnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp"
                        android:text="8/8"
                        android:textColor="#b5abab"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageButton
                                android:id="@+id/miss_minus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:adjustViewBounds="true"
                                android:background="#00ffffff"
                                android:scaleType="fitCenter"
                                android:src="@drawable/delete"
                                android:tint="#000"/>

                            <TextView
                                android:id="@+id/miss"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:gravity="center_vertical"
                                android:text="Miss 0"
                                android:textAlignment="center"
                                android:textColor="#4d4b4b"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/miss_plus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:adjustViewBounds="true"
                                android:background="#00ffffff"
                                android:scaleType="fitCenter"
                                android:src="@drawable/add"
                                android:tint="#000" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageButton
                                android:id="@+id/attend_minus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:adjustViewBounds="true"
                                android:background="#00ffffff"
                                android:scaleType="fitCenter"
                                android:src="@drawable/delete"
                                android:tint="#000" />

                            <TextView
                                android:id="@+id/attend"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:gravity="center_vertical"
                                android:text="Attend 0"
                                android:textAlignment="center"
                                android:textColor="#4d4b4b"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/attend_plus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:adjustViewBounds="true"
                                android:background="#00ffffff"
                                android:scaleType="fitCenter"
                                android:src="@drawable/add"
                                android:tint="#000" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/detailavv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:indicatorName="BallPulseIndicator" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/detaillistlayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cardView"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Details"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/detail_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
