<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayankaggarwal.viteventsapp.Details"
    android:focusableInTouchMode="true"
    android:descendantFocusability="afterDescendants"
    android:background="#edebeb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#fff"
        android:id="@+id/detail_cardView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?themeColor"
                app:cardCornerRadius="8dp"
                android:id="@+id/percentage_card"
                android:layout_margin="10dp"
                android:layout_gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SJT-402"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_margin="2dp"
                    android:id="@+id/course_slot" />
            </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/one"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operating System"
                    android:id="@+id/detail_course_name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="?themeColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty"
                    android:layout_marginTop="5dp"
                    android:id="@+id/detail_faculty"
                    android:textSize="10dp"
                    android:textColor="#b5abab"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course code"
                    android:layout_marginTop="5dp"
                    android:id="@+id/detail_course_code"
                    android:textSize="10dp"
                    android:textColor="#b5abab"/>
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#fff"
        android:id="@+id/cardView"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="horizontal">

                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        CircleProgressView:cpv_barColor="?themeColor"
                        CircleProgressView:cpv_barWidth="6.5dp"
                        CircleProgressView:cpv_innerContourSize="0dp"
                        CircleProgressView:cpv_outerContourSize="0dp"
                        CircleProgressView:cpv_maxValue="100"
                        CircleProgressView:cpv_rimColor="#ececec"
                        CircleProgressView:cpv_rimWidth="6.5dp"
                        CircleProgressView:cpv_startAngle="90"
                        CircleProgressView:cpv_showUnit="false"
                        CircleProgressView:cpv_spinColor="@color/color_accent"
                        CircleProgressView:cpv_textColor="#000"
                        CircleProgressView:cpv_textSize="20dp"
                        CircleProgressView:cpv_value="0"
                        CircleProgressView:cpv_textMode="Value"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/8"
                    android:textSize="10dp"
                    android:textColor="#b5abab"
                    android:textStyle="bold"
                    android:id="@+id/atendnumber"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_marginRight="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/delete"
                            android:background="#00ffffff"
                            android:id="@+id/miss_minus"
                            android:tint="?themeColor"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="match_parent"
                            android:text="Miss 0"
                            android:gravity="center_vertical"
                            android:id="@+id/miss"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="#4d4b4b"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/add"
                            android:background="#00ffffff"
                            android:id="@+id/miss_plus"
                            android:tint="?themeColor"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/delete"
                            android:background="#00ffffff"
                            android:id="@+id/attend_minus"
                            android:tint="?themeColor"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Attend 0"
                            android:layout_weight="0.6"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="#4d4b4b"
                            android:id="@+id/attend"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/add"
                            android:background="#00ffffff"
                            android:id="@+id/attend_plus"
                            android:tint="?themeColor"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:paddingTop="10dp"
            android:backgroundTint="?themeColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminate="true"
            android:layout_margin="3dp"
            android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detaillistlayout"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/text2"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Details"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detail_recycler">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
