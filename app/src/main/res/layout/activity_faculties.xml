<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_faculties"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayankaggarwal.viteventsapp.Faculties">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey Mayank, type in the name you are looking for:"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:id="@+id/namelongtext"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_faculties"
        android:layout_marginTop="15dp"
        android:hint="Search.."
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_below="@+id/namelongtext"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faculty_recycler"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/search_faculties"
        ></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>
