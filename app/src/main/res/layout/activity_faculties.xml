<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_faculties"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vitgo.mayankaggarwal.viteventsapp.activities.Faculties">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/fac_toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey Mayank, type in the name you are looking for:"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:id="@+id/namelongtext"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_faculties"
        android:layout_marginTop="10dp"
        android:hint="Search.."
        android:maxLines="1"
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_below="@+id/namelongtext"
        />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/noanything"
                android:layout_marginTop="50dp"
                android:background="#00000000"
                android:adjustViewBounds="true"
                android:id="@+id/noclass" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facultyrefresh"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faculty_recycler"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/search_faculties"
        ></android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
