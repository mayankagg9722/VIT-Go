<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00ffffff">

    <android.support.v7.widget.CardView
        android:id="@+id/event_item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#40ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bigeventimage"
            android:scaleType="centerCrop"
            android:background="#fff"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@drawable/eventgradient">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#00000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_name"
                    android:text="Make A-Thon"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:textSize="17dp"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chapter_name"
                    android:text="IEEE-MTS"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#fff"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_event"
                    android:text="28 March"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#fff"
                    android:textSize="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_going"
                    android:text="200 Going"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#fff"
                    android:textSize="13dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>



        <android.support.v7.widget.CardView
            android:id="@+id/tickcard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#00000000"
            android:layout_marginBottom="5dp"
            app:cardElevation="0dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="#fff"
                android:src="@drawable/tick"/>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</LinearLayout>