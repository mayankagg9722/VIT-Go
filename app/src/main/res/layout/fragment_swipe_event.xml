<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00ffffff">

    <android.support.v7.widget.CardView
        android:id="@+id/event_item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#40ffffff"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:cardElevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_name"
                    android:text="Make A-Thon"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="25dp"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chapter_name"
                    android:text="IEEE-MTS"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#fff"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_event"
                    android:text="28 March"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#fff"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_going"
                    android:text="200 Going"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#fff"
                    android:textSize="15dp"/>
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/regcard"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#E32797"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|bottom"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Register"
                android:textColor="#fff" />
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</LinearLayout>